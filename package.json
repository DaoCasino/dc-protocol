{
  "name": "dc-protocol",
  "version": "0.1.0",
  "description": "Start ganache and deploy our contracts",
  "main": "v_0.1/testrpc.sh",
  "scripts": {
    "start": "cd v_0.1 && sh testrpc.sh | sh migrate.sh",
    "build": "cd v_0.1 && truffle compile",
    "clean": "rm -rf ./testrpc_db",

    "docker:start"   : "docker-compose up -d && docker-compose ps",
    "docker:stop"    : "docker-compose down && docker-compose ps",
    "docker:logs"    : "docker logs -f dc_protocol",
    "docker:login"   : "docker login -u alexstep",
    "docker:build"   : "sh docker_build.sh",
    "docker:publish" : "sh docker_publish.sh v_0.1",
    "docker:test"    : "docker build -t dc_protocol_test ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/daocasino/SDK.git"
  },
  "keywords": [
    "dao",
    "casino",
    "protocol",
    "testrpc"
  ],
  "author": "alex.step@dao.casino",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/daocasino/SDK/issues"
  },
  "homepage": "https://gitlab.com/daocasino/SDK#README",

  "dependencies": {
    "truffle": "^5.0.0-beta.0",
    "truffle-hdwallet-provider": "^1.0.0-web3one.0"
  }
}
